{
  "env": {
    "node": true,
    "commonjs": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["airbnb", "prettier", "plugin:node/recommended"],
  "plugins": ["prettier"],
  "overrides": [
    {
      "files": "**/*.test.js",
      "rules": {
        "node/no-unpublished-import": 0
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "prettier/prettier": [
      "error",
      { "arrowParens": "avoid", "endOfLine": "crlf" }
    ],
    "no-console": 0
  }
}
